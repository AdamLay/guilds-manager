@page
@model GuildsManager.Web.Pages.Factions.IndexModel

@{
  ViewData["Title"] = "Index";
}

<div class="d-flex align-items-center mb-2">
  <h1 class="flex-fill">Factions</h1>
  <a class="btn btn-primary" asp-page="/Factions/Create">Create New Faction</a>
</div>
<table class="table">
  <thead>
  <tr>
    <th>
      @Html.DisplayNameFor(model => model.Faction[0].Name)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.Faction[0].Force)
    </th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  @foreach (var item in Model.Faction)
  {
    <tr>
      <td>
        @Html.DisplayFor(modelItem => item.Name)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Force)
      </td>
      <td>
        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
      </td>
    </tr>
  }
  </tbody>
</table>