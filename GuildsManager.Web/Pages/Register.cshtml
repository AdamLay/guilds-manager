@page
@model GuildsManager.Web.Pages.Register

<div class="row">
  <div class="col-12 col-md-6 col-xl-4">
    <form method="post">
      <!-- Email input -->
      <div class="form-outline mb-4">
        <label class="form-label" asp-for="Email">Username</label>
        <input type="email" class="form-control" asp-for="Email" />
      </div>

      <!-- Password input -->
      <div class="form-outline mb-4">
        <label class="form-label" asp-for="Password"></label>
        <input type="password" class="form-control" asp-for="Password" />
      </div>

      <!-- Submit button -->
      <button type="submit" class="btn btn-primary btn-block mb-4">Create User</button>

    </form>
  </div>
</div>