@using GuildsManager.Web.Data
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model GuildsManager.Web.ViewModels.Attacks.AttackViewModel

@{
  var elements = Enum.GetValues<Element>()
    .Select(x => new SelectListItem
    {
      Value = ((byte) x).ToString(),
      Text = x.ToString()
    });
}

<input type="hidden" asp-for="CardId"/>

<div class="form-group">
  <label asp-for="Name" class="control-label"></label>
  <input asp-for="Name" class="form-control"/>
  <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
  <label asp-for="Attacks" class="control-label"></label>
  <input asp-for="Attacks" class="form-control"/>
  <span asp-validation-for="Attacks" class="text-danger"></span>
</div>
<div class="form-group form-check">
  <label class="form-check-label">
    <input class="form-check-input" asp-for="AoE"/> @Html.DisplayNameFor(model => model.AoE)
  </label>
</div>
<div class="row mt-4">
  <div class="col-sm-6">
    <div class="form-group">
      <label asp-for="MinRange" class="control-label">Minimum Range</label>
      <input asp-for="MinRange" class="form-control"/>
      <span asp-validation-for="MinRange" class="text-danger"></span>
      <p>Optional. Minimum range.</p>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="form-group">
      <label asp-for="Range" class="control-label"></label>
      <input asp-for="Range" class="form-control"/>
      <span asp-validation-for="Range" class="text-danger"></span>
    </div>
  </div>
</div>
<div class="form-group">
  <label asp-for="Arc" class="control-label"></label>
  <input asp-for="Arc" class="form-control"/>
  <span asp-validation-for="Arc" class="text-danger"></span>
</div>
<div class="form-group">
  <label asp-for="Element" class="control-label"></label>
  <select asp-for="Element" class="form-select" asp-items="@elements"></select>
  <span asp-validation-for="Element" class="text-danger"></span>
</div>