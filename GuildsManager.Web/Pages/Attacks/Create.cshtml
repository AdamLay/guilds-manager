                <span asp-validation-for="Attack.Attacks" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Attack.AoE" /> @Html.DisplayNameFor(model => model.Attack.AoE)
