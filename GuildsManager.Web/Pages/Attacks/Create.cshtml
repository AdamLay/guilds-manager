            </div>
            <div class="form-group">
                <label asp-for="Attack.Name" class="control-label"></label>
                <input asp-for="Attack.Name" class="form-control" />
                <span asp-validation-for="Attack.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Attack.Attacks" class="control-label"></label>
