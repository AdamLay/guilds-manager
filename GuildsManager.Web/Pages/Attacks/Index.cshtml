@page
@model GuildsManager.Web.Pages.Attacks.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Attack[0].CardId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attack[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attack[0].Attacks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attack[0].AoE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attack[0].Range)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attack[0].Arc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attack[0].Element)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Attack) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CardId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attacks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AoE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Range)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Arc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Element)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
