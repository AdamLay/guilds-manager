@page
@model GuildsManager.Web.Pages.ModelCards.CreateFromTextModel

@{
  ViewData["Title"] = "Create Model Card";
}

<h1>Create Model Card</h1>

<hr/>

<form method="post">
  <div asp-validation-summary="All" class="text-danger"></div>

  <div class="form-group">
    <label asp-for="ViewModel.FactionId" class="control-label">Faction</label>
    <select asp-for="ViewModel.FactionId" class="form-select" asp-items="ViewBag.FactionId"></select>
    <p class="help">Which faction does this unit belong to?</p>
  </div>

  <div class="form-group">
    <textarea asp-for="ViewModel.Input" rows="20" class="form-control"></textarea>
  </div>
  <div class="form-group mt-2">
    <input type="submit" value="Create Model Card" class="btn btn-primary"/>
  </div>
</form>
