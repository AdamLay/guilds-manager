@model GuildsManager.Web.Pages.ModelCards.IndexModel

@{
  ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
  <a asp-page="Create">Create New</a>
</p>
<table class="table">
  <thead>
  <tr>
    <th>
      @Html.DisplayNameFor(model => model.ModelCard[0].Faction)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.ModelCard[0].Name)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.ModelCard[0].Keywords)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.ModelCard[0].Slots)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.ModelCard[0].UnitNumber)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.ModelCard[0].Might)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.ModelCard[0].Healing)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.ModelCard[0].Dex)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.ModelCard[0].IgnoreDifficultTerrain)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.ModelCard[0].Levitating)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.ModelCard[0].Will)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.ModelCard[0].Def)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.ModelCard[0].Shield)
    </th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  @foreach (var item in Model.ModelCard)
  {
    <tr>
      <td>
        @Html.DisplayFor(modelItem => item.Faction.Id)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Name)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Keywords)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Slots)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.UnitNumber)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Might)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Healing)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Dex)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.IgnoreDifficultTerrain)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Levitating)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Will)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Def)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Shield)
      </td>
      <td>
        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
      </td>
    </tr>
  }
  </tbody>
</table>